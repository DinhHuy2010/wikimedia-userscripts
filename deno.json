{
    "tasks": {
        "build": "deno run --allow-read --allow-write=./scripts/built-files.json --allow-run --allow-env ./scripts/build.ts",
        "publish": "deno run --allow-read=./build/,./scripts/built-files.json --allow-env --env-file --allow-net --allow-sys scripts/publish.ts",
        "buildnpublish": "deno run --allow-read=./src/,./build,./scripts/built-files.json --allow-write=./scripts/built-files.json --allow-run --allow-env --env-file --allow-net --allow-sys scripts/bnp.ts"
    },
    "imports": {
        "@std/assert": "jsr:@std/assert@1",
        "@std/cli": "jsr:@std/cli@^1.0.22",
        "browserslist-config-wikimedia": "npm:browserslist-config-wikimedia@^0.7.0",
        "esbuild": "npm:esbuild@0.25.6",
        "mwn": "npm:mwn@^3.0.1",
        "types-mediawiki": "npm:types-mediawiki@^1.10.1"
    },
    "fmt": {
        "indentWidth": 4,
        "lineWidth": 79
    },
    "nodeModulesDir": "auto",
    "compilerOptions": {
        "types": [
            "./node_modules/types-mediawiki/index.d.ts"
        ],
        "lib": [
            "deno.ns",
            "dom",
            "deno.window"
        ]
    },
    "license": "CC-BY-4.0 OR MIT"
}